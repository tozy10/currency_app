<section class="w-full lg:w-[30%] mt-[3em] mx-auto p-2.5 bg-indigo-100 rounded-lg"> 
  <div class="container mx-auto px-4 py-8 max-w-md">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <%= link_to new_transfer_path do %>
        <div 
          class="
            bg-gradient-to-r from-yellow-500 to-amber-500
            rounded-lg p-6 shadow-lg text-white transition
            ease-out-in hover:-translate-y-0 hover:scale-110
            duration-300
          "
        >
          <h2 class="text-xl font-semibold mb-2">Transfer funds</h2>
          <p class="text-gray-200">Transfer funds to a friend.</p>
        </div>
      <% end %>
      
      <%= link_to history_path do %>
        <div 
          class="
            bg-gradient-to-r from-blue-500 to-teal-500 rounded-lg
            p-6 shadow-lg text-white transitionease-out-in 
            hover:-translate-y-0 hover:scale-110 duration-300
          "
        >
          <h2 class="text-xl font-semibold mb-2">Account History</h2>
          <p class="text-gray-200">View your activity.</p>
        </div>
      <% end %>

      <%= link_to budget_menu_path do %>
        <div 
          class="
            bg-gradient-to-r from-emerald-500 to-lime-500 rounded-lg p-6
            shadow-lg text-white transitionease-out-in hover:-translate-y-0
            hover:scale-110 duration-300
          "
        >
          <h2 class="text-xl font-semibold mb-2">Plan a Budget</h2>
          <p class="text-gray-200">Plan and adjust your budget.<p>
        </div>
      <% end %>

       <%= link_to edit_user_registration_path do %>
        <div 
          class="
            bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg p-6 shadow-lg
            text-white transitionease-out-in hover:-translate-y-0 hover:scale-110 
            duration-300
          "
        >
          <h2 class="text-xl font-semibold mb-2">Account Settings</h2>
          <p class="text-gray-200">Configure your account</p>
        </div>
      <% end %>
    </div>
  </div>
</section>