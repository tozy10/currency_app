<%= link_to 'Main menu', dashboard_path,
  class: 'px-3 py-2 border border-indigo-500 rounded-full 
    hover:text-white hover:bg-indigo-400 hover:border-indigo-400
    font-semibold text-indigo-500
  '
%>
<section class="mx-auto p-2 bg-gray-100 mt-4">
  <div class="grid grid-cols-1 md:grid-cols-2">
    <div class="w-full col-span-1 md:col-span-2">
      <h1 class="text-6xl text-center">Deposits</h1>
      <div class="grid grid-cols-5 md:grid-cols-7 justify-center gap-4 md:p-2 my-4 md:px-20 text-center">
        <% @currencies.each do |currency| %>
          <div 
            class="
              rounded-lg bg-indigo-100 p-2.5 transition
            ease-out-in hover:-translate-y-0 hover:scale-110
            duration-300
              
            "
          >
            <figure class="w-10 h-10 p-2 bg-blue-800 rounded-md mx-auto mb-2">
              <svg width="24" height="24" fill="#FFFFFF">
                <path d="M18.799 7.038c-.496-.535-.799-1.252-.799-2.038 0-1.656 1.344-3 3-3s3 1.344 3 3-1.344 3-3 3c-.146 0-.29-.01-.431-.031l-3.333 6.032c.475.53.764 1.231.764 1.999 0 1.656-1.344 3-3 3s-3-1.344-3-3c0-.583.167-1.127.455-1.587l-2.565-3.547c-.281.087-.58.134-.89.134l-.368-.022-3.355 6.069c.451.525.723 1.208.723 1.953 0 1.656-1.344 3-3 3s-3-1.344-3-3 1.344-3 3-3c.186 0 .367.017.543.049l3.298-5.967c-.52-.539-.841-1.273-.841-2.082 0-1.656 1.344-3 3-3s3 1.344 3 3c0 .617-.187 1.191-.507 1.669l2.527 3.495c.307-.106.637-.164.98-.164.164 0 .325.013.482.039l3.317-6.001zm-3.799 7.962c.552 0 1 .448 1 1s-.448 1-1 1-1-.448-1-1 .448-1 1-1zm-6-8c.552 0 1 .448 1 1s-.448 1-1 1-1-.448-1-1 .448-1 1-1z"></path>
              </svg>
            </figure>
            <h1 class="font-bold"><%= currency.amount %>.00</h2>
            <p><%= currency.created_at.strftime('%d %B %Y') %><p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="w-full">
      <h1 class="text-6xl text-center">Transfers recieved</h1>
      <div class="grid grid-cols-3 justify-center gap-4 md:p-2 my-4 md:px-20 text-center">
        <% @money_received.each do |money| %>
          <div 
            class="
              rounded-lg bg-emerald-100 p-2.5 transition
            ease-out-in hover:-translate-y-0 hover:scale-110
            duration-300
              
            "
          >
            <figure class="w-10 h-10 p-2 bg-emerald-600 rounded-md mx-auto mb-2">
              <svg width="24" height="24" fill="#FFFFFF">
                <path d="M18.799 7.038c-.496-.535-.799-1.252-.799-2.038 0-1.656 1.344-3 3-3s3 1.344 3 3-1.344 3-3 3c-.146 0-.29-.01-.431-.031l-3.333 6.032c.475.53.764 1.231.764 1.999 0 1.656-1.344 3-3 3s-3-1.344-3-3c0-.583.167-1.127.455-1.587l-2.565-3.547c-.281.087-.58.134-.89.134l-.368-.022-3.355 6.069c.451.525.723 1.208.723 1.953 0 1.656-1.344 3-3 3s-3-1.344-3-3 1.344-3 3-3c.186 0 .367.017.543.049l3.298-5.967c-.52-.539-.841-1.273-.841-2.082 0-1.656 1.344-3 3-3s3 1.344 3 3c0 .617-.187 1.191-.507 1.669l2.527 3.495c.307-.106.637-.164.98-.164.164 0 .325.013.482.039l3.317-6.001zm-3.799 7.962c.552 0 1 .448 1 1s-.448 1-1 1-1-.448-1-1 .448-1 1-1zm-6-8c.552 0 1 .448 1 1s-.448 1-1 1-1-.448-1-1 .448-1 1-1z"></path>
              </svg>
            </figure>
            <h1 class="font-bold"><%= money.amount %>.00</h2>
            <p><%= money.created_at.strftime('%d %B %Y') %><p>
          </div>
        <% end %>
      </div>
    </div>

    <div class="w-full">
      <h1 class="text-6xl text-center">Transfers sent</h1>
      <div class="grid grid-cols-3 justify-center gap-4 md:p-2 my-4 text-center">
        
        <% @money_sent.each do |money| %>
          <div 
            class="
              rounded-lg bg-yellow-100 p-2.5 transition
            ease-out-in hover:-translate-y-0 hover:scale-110
            duration-300
              
            "
          >
            <figure class="w-10 h-10 p-2 bg-yellow-600 rounded-md mx-auto mb-2">
              <svg width="24" height="24" fill="#FFFFFF">
                <path d="M18.799 7.038c-.496-.535-.799-1.252-.799-2.038 0-1.656 1.344-3 3-3s3 1.344 3 3-1.344 3-3 3c-.146 0-.29-.01-.431-.031l-3.333 6.032c.475.53.764 1.231.764 1.999 0 1.656-1.344 3-3 3s-3-1.344-3-3c0-.583.167-1.127.455-1.587l-2.565-3.547c-.281.087-.58.134-.89.134l-.368-.022-3.355 6.069c.451.525.723 1.208.723 1.953 0 1.656-1.344 3-3 3s-3-1.344-3-3 1.344-3 3-3c.186 0 .367.017.543.049l3.298-5.967c-.52-.539-.841-1.273-.841-2.082 0-1.656 1.344-3 3-3s3 1.344 3 3c0 .617-.187 1.191-.507 1.669l2.527 3.495c.307-.106.637-.164.98-.164.164 0 .325.013.482.039l3.317-6.001zm-3.799 7.962c.552 0 1 .448 1 1s-.448 1-1 1-1-.448-1-1 .448-1 1-1zm-6-8c.552 0 1 .448 1 1s-.448 1-1 1-1-.448-1-1 .448-1 1-1z"></path>
              </svg>
            </figure>
            <h1 class="font-bold"><%= money.amount %>.00</h2>
            <p><%= money.created_at.strftime('%d %B %Y') %><p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>