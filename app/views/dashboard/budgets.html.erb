<%= link_to 'Main menu', dashboard_path,
  class: 'px-3 py-2 border border-indigo-500 rounded-full 
    hover:text-white hover:bg-indigo-400 hover:border-indigo-400
    font-semibold text-indigo-500
  '
%>

<section class="w-full lg:w-[30%] mt-[5em] mx-auto p-2.5 bg-indigo-100 rounded-lg"> 
  <div class="container mx-auto px-4 py-8 max-w-md">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <%= link_to new_budget_path do %>
        <div 
          class="
            bg-gradient-to-r from-blue-500 to-teal-500
            rounded-lg p-6 shadow-lg text-white transition
            ease-in-out hover:-translate-y-0 hover:scale-90
            duration-300
          "
        >
          <h2 class="text-xl font-semibold mb-2">Add new budget</h2>
          <p class="text-gray-200">Add a new budget.</p>
        </div>
      <% end %>
      
      <%= link_to budgets_path do %>
        <div 
          class="
            bg-gradient-to-r from-green-500 to-lime-500 rounded-lg
            p-6 shadow-lg text-white transition ease-in-out
            hover:-translate-y-0 hover:scale-90 duration-300
          "
        >
          <h2 class="text-xl font-semibold mb-2">Your budgets</h2>
          <p class="text-gray-200">View all of your budgets.</p>
        </div>
      <% end %>
    </div>
  </div>
</section>