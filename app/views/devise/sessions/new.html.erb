<section class="w-full md:p-28">
  <div class="w-full lg:w-[45%] mx-auto p-2.5 bg-gray-100">

    <div class="relative flex flex-col p-4 rounded-md text-black bg-white">
      <h1 class="font-semibold text-center md:text-left text-2xl md:text-3xl text-gray-600">Welcome back to <span class="text-black">App</span></h1>
      <p class="text-gray-600 mb-8">Log in to your account</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="flex flex-col gap-3">
          <div class="block relative"> 
            <%= f.label :email, 
              class: "block text-gray-600 cursor-text text-sm leading-[140%] font-normal mb-2" 
            %>
            <%= f.email_field :email,
              autofocus: true, 
              autocomplete: "email",
              class: "rounded border border-gray-200 text-sm w-full font-normal leading-[18px]
                text-black tracking-[0px] appearance-none block h-11 m-0 p-[11px] 
                focus:ring-2 ring-offset-2  ring-gray-900 outline-0"
            %>
          </div>
          <div class="block relative"> 
            <%= f.label :password, 
              class: "block text-gray-600 cursor-text text-sm leading-[140%] font-normal mb-2" 
            %>
            <%= f.password_field :password,
              autofocus: true, 
              autocomplete: "email",
              class: "rounded border border-gray-200 text-sm w-full font-normal leading-[18px]
                text-black tracking-[0px] block h-11 m-0 p-[11px] 
                focus:ring-2 ring-offset-2  ring-gray-900 outline-0"
            %>
          </div>
          <div class="block relative"> 
            <%= f.check_box :remember_me, class: "rounded-full focus:ring-2 ring-offset-2 ring-gray-900 outline-0" %>
            <span class="mb-1">Remember me</span>
          </div>
          <%= f.submit "Log in", class: 'bg-[#7747ff] w-max m-auto px-6 py-2 rounded text-white text-sm font-normal' %>
        </div>
        
      <% end %>
      <div class="text-sm text-left mt-[1.6rem]">
        Donâ€™t have an account yet? 
        <%= link_to 'Sign up!', new_user_registration_path, class: 'text-sm text-[#7747ff]' %>

        <div class="mt-2">
          <%= link_to 'Forgot your password?', edit_user_password_path, class: 'text-sm text-[#7747ff]' %>
        </div>
      </div>
    </div>
  </div>
</section>